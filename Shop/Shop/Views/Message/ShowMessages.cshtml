

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, TagHelpersApp
@model MessageViewModel

<div class="row mt-5 mb-2">
    <ul class="messages-container">
        @{
            if (Model.AllMessages != null)
            {
                foreach (var message in Model.AllMessages)
                {
                    <li style="text-align: center">
                        <h3>@message.Phone</h3>
                        <h6>>@message.Text</h6>
                        <form method="post" asp-controller="Message" asp-action="RemoveMessage">
                            <input type="text" name="id" placeholder="Id" value="@message.Id" hidden />
                            <input type="submit" value="Удалить" />
                        </form>
                    </li>
                }
            }
            else
            {
                <li>Список пуст</li>
            }
        }
    </ul>
</div>